class Solution {
public:
    int countNegatives(vector<vector<int>>& grid) {
        int count = 0;
        int n = grid.size();
        int m = grid[0].size();

        for(int i=0;i<n;i++){
            vector<int> arr = grid[i];
            reverse(arr.begin(),arr.end());
            int idx = upper_bound(arr.begin(),arr.end(),-1) - arr.begin();
            //cout<<idx<<endl;
            count += idx; 
        }

        return count;
    }
};

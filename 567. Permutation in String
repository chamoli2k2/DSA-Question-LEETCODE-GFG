class Solution {
public:
    bool checkInclusion(string s1, string s2) {
        // base case
        if(s1.size() > s2.size()){
            return false;
        }
        
        sort(s1.begin(),s1.end());
        
        int k = s1.size();
        int n = s2.size();
        
        for(int i=0;i<=n-k;i++){
            string temp = s2.substr(i,k);
            sort(temp.begin(),temp.end());
            if(temp == s1){
                return true;
            }
        }
        
        return false;
    }
};

class Solution{
public:
    int minimumDays(int S, int N, int M){
        // base case
        // if daily need is greater than daily rasan
        if(N < M){
            return -1;
        }
        else if((N-M) * 6 < M && S > 6){
            return -1;
        }
        
        int foodRequired = S * M;
        int foodBuy = foodRequired / N;
        
        if(foodRequired % N != 0){
            foodBuy ++;
        }
        
        return foodBuy;
    }
};

class Solution{
public:
    int maxLength(string s){
        int max1=0;
        int n=s.size();
        stack<int> st;
        st.push(-1);
        for(int i=0;i<n;i++){
            char ch=s[i];
            if(ch=='('){
                st.push(i);
            }else{
                st.pop();
                if(st.empty()){
                    st.push(i);
                }else{
                    max1=max(max1,i-st.top());
                }
            }
        }
        return max1;
    }
};

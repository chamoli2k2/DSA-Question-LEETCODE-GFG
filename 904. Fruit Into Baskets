class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        int i = 0, j = 0, n = fruits.size(), ans = 0;
        unordered_map<int,int> mp;

        while(j < n){
            mp[fruits[j]]++;

            if(i < n && mp.size() > 2){
                if(mp[fruits[i]] == 1){
                    mp.erase(fruits[i]);
                }
                else{
                    mp[fruits[i]]--;
                }
                i++;
            }

            ans = max(ans,j-i+1);
            j++;
        }

        return ans;
    }
};

class Solution {
public:
    string countAndSay(int n) {
        if(n == 1){
            return "1";
        }

        string res = countAndSay(n-1);
        int k = res.size();

        string ans = "";
        int count = 1;
        int flag = 1;
        for(int i=0;i<k-1;i++){
            if(res[i] == res[i+1]){
                count++;
                flag = 0;
            }
            else{
                flag = 1;
            }

            if(flag){
                ans += to_string(count);
                ans += res[i];
                count = 1;
            }
        }
        
        // Checking the case
        if(k-2 >= 0 && res[k-1] == res[k-2]){
            ans += to_string(count);
            ans += res[k-1];
        }
        else{
            ans += '1';
            ans += res[k-1];
        }

        return ans;
    }
};

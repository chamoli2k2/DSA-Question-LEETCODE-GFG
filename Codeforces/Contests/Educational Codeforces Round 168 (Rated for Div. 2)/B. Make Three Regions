#include <bits/stdc++.h>
using namespace std;
int solve(vector<string> &s){
    int n = s[0].size();
    int ans = 0;
    
    // In row 1
    for(int i=1; i<n-1; i++){
        if(s[0][i] == '.'){
            if(s[1][i-1] == 'x' && s[1][i+1] == 'x' && s[1][i] == '.' && s[0][i-1] == '.' && s[0][i+1] == '.'){
                ans++;
            }
        }
    }
    
    // In row 2
    for(int i=1; i<n-1; i++){
        if(s[1][i] == '.'){
            if(s[0][i-1] == 'x' && s[0][i+1] == 'x' && s[0][i] == '.' && s[1][i-1] == '.' && s[1][i+1] == '.'){
                ans++;
            }
        }
    }
    
    return ans;
}
 
 
int main()
{
    int t;
    cin>>t;
    
    while(t--){
        string s1, s2;
        int n;
        cin>>n;
        vector<string> nums;
        cin>>s1>>s2;
        nums.push_back(s1);
        nums.push_back(s2);
        
        int ans = solve(nums);
        cout<<ans<<endl;
    }
 
    return 0;
}
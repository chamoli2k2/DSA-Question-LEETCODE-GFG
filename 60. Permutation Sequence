class Solution {
public:
    string getPermutation(int n, int k) {
        string ans = "";
        vector<int> number;
        int fact = 1;
        for(int i=1;i<n;i++){
            fact = fact * i;
            number.push_back(i);
        }
        number.push_back(n);
        k = k - 1;
        while(true){
            int idx = k/fact;
            ans.push_back(number[idx]+'0');
            number.erase(number.begin()+idx);
            if(number.size() == 0){
                break;
            }
            k = k % fact;
            fact = fact / number.size();
        }

        return ans;
    }
};

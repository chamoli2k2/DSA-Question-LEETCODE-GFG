class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to sort the array into a wave-like array.
    void convertToWave(int n, vector<int>& arr){
        
        int idx = 0;
        while(idx < n){
            if(idx+1 < n) swap(arr[idx], arr[idx+1]);
            idx += 2;
        }
    }
};
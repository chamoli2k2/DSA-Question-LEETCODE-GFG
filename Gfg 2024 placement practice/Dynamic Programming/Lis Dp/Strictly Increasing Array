class Solution {
  public:

    int min_operations(vector<int>& nums) {
        int n = nums.size(), maxLen = 1;
        vector<int> dp(n+1, 1);
        
        for(int i=1; i<n; i++){
            for(int j=0; j<i; j++){
                if(nums[i] > nums[j] && (nums[i]-nums[j]) >= (i-j)){
                    dp[i] = max(dp[i], dp[j]+1);
                }
            }
            maxLen = max(maxLen, dp[i]);
        }
        
        
        return n-maxLen;
    }
};
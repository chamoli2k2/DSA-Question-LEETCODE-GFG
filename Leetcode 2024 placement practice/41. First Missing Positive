class Solution {
public:
    int firstMissingPositive(vector<int>& nums) {
        int n = nums.size();

        for(int i=0; i<n; i++){
            if(nums[i] <= 0 || nums[i] > n) nums[i] = n+1;
        }

        for(int i=0; i<n; i++){
            int idx = abs(nums[i]);
            if(idx-1 >= 0 && idx-1 < n){
                if(nums[idx-1] > 0) nums[idx-1] = -nums[idx-1];
            }
        }

        for(int i=0; i<n; i++){
            if(nums[i] > 0) return i+1;
        }

        return n+1;
    }
};
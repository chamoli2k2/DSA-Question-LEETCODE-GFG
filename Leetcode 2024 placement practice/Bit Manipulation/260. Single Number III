class Solution {
public:
    vector<int> singleNumber(vector<int>& arr) {
        int XOR = 0, n = arr.size();
        for(int i=0; i<n; i++){
            XOR = XOR ^ arr[i];
        }
        
        // Checking the 1st set bit
        int setBit = 0;
        
        while(XOR){
            if(XOR & 1){
                break;
            }
            setBit++;
            XOR = XOR >> 1;
        }
        
        
        int setZero = 0, setOne = 0;
        
        for(int i=0; i<n; i++){
            bool bit = arr[i] & (1<<setBit);
            if(bit){
                setOne = setOne ^ arr[i];
            }
            else{
                setZero = setZero ^ arr[i];
            }
        }

        return {setZero, setOne};
    }
};
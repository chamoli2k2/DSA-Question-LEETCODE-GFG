class Solution {
public:
    bool isIsomorphic(string s, string t) {
        unordered_map<char,int> mp1, mp2;
        unordered_map<char,char> mp;
        for(auto it : s) mp1[it]++;
        for(auto it : t) mp2[it]++;
        int n = s.size();

        for(int i=0; i<n; i++){
            if(mp.count(s[i]) != 0){
                if(mp[s[i]] != t[i]) return false;
            }
            else if(s[i] != t[i]){
                if(mp1[s[i]] != mp2[t[i]]) return false;
                mp[s[i]] = t[i];
            }
            else{
                mp[s[i]] = t[i];
            }
        }

        return true;
    }
};
class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        int n = s.size();
        // Base case
        if(n&1) return false;
        for(int i=0; i<n; i++){
            if(s[i] == '(' || s[i] == '{' || s[i] == '['){
                st.push(s[i]);
            }
            else{
                if(st.empty()) return false;
                if(s[i] == ')'){
                    if(st.top() != '(') return false;
                    st.pop();
                }
                else if(s[i] == ']'){
                    if(st.top() != '[') return false;
                    st.pop();
                }
                else{
                    if(st.top() != '{') return false;
                    st.pop();
                }
            }
        }

        return st.empty();
    }
};
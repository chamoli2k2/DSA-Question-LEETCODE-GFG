class Solution {
public:
    vector<int> countBits(int n) {
        vector<int> ans;
        for(int i=0;i<=n;i++){
            int count = 0, num = i;
            while(num){
                int rmSb = num & -num;
                num -= rmSb;
                count++;
            }
            ans.push_back(count);
        }
        return ans;
    }
};

class Solution {
public:
    int triangleNumber(vector<int>& nums) {
        int n = nums.size();
        if(n < 3) return 0;
        
        int i = 2;
        sort(nums.begin(),nums.end());
        int ans = 0;
        
        while(i < n){
            int left = 0;
            int right = i - 1;

            while(left < right){
                if(nums[left] + nums[right] > nums[i]){
                    ans += right - left;
                    right--;
                }
                else{
                    left++;
                }
            }

            i++;
        }

        return ans;
    }
};
